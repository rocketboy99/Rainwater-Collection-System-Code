void startDistributionPump() {
    if((pressureState != 4) && (recirculationFunctionDisabled == true) && (recirculationValveOpen == true) && (distributionPumpModeDisabled == false) && (distributionPumpDryRun == false)){
      closeRecirculationValve(); //IF THE RECIRCULATION VALVE IS OPEN, and it is not intended to be, CLOSE IT
      digitalWrite(TRANSFER_PUMP_RELAY, HIGH);
      distributionPumpActive = true;      
      Serial.println("Distribution Pump Started");

    }else if((pressureState != 4) &&(distributionPumpDryRun == false) && (distributionPumpModeDisabled == false)){
      digitalWrite(TRANSFER_PUMP_RELAY, HIGH);
      distributionPumpActive = true;
      Serial.println("Distribution Pump Started");

    }else if((pressureState != 4) &&(distributionPumpModeDisabled == true)){
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Distribution Pump Start Blocked By Mode Switch");
      distributionPumpActive = false;

    }else if((pressureState != 4) &&(distributionPumpDryRun == true)){
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Distribution Pump Start Blocked By Dry Run Condition");
      distributionPumpActive = false;

    }else if(pressureState = 4){
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Distribution Pump Start Blocked By OverPressure Condition");
      distributionPumpActive = false;

    }else{
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Distribution Pump Start Blocked by both Dry Run Condition and Mode Switch");
      distributionPumpActive = false;   
    }

}


