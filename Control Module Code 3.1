    newWaterProcessing = true;
    startUVLight();
    startTransferPump();

    while((transferPumpModeDisabled == false) && (transferPumpDryRun == false) && (ACCUMULATOR_Tank_Empty = false) && (ACCUMULATOR_tank_float_error = false)){
      
      //in this loop, the system just kills time waiting for an exit condition while performing important idle tasks
      IdleActivities();
      delay(processing_refreshing_rate);

    }

    //done processing new water
    stopUVLight();
    newWaterProcessing = false;
    stopTransferPump();
  }else{
    //do nothing
  }
}

