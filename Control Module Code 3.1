void startTransferPump() {
    if((recirculationValveOpen == true) && (transferPumpModeDisabled == false) && (transferPumpDryRun == false)){
      closeRecirculationValve(); //IF THE RECIRCULATION VALVE IS OPEN, CLOSE IT
      digitalWrite(TRANSFER_PUMP_RELAY, HIGH);
      transferPumpActive = true;      
      Serial.println("Transfer Pump Started");

    }else if((transferPumpDryRun == false) && (transferPumpModeDisabled == false)){
      digitalWrite(TRANSFER_PUMP_RELAY, HIGH);
      transferPumpActive = true;
      Serial.println("Transfer Pump Started");

    }else if(transferPumpModeDisabled == true){
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Transfer Pump Start Blocked By Mode Switch");
      transferPumpActive = false;

    }else if(transferPumpDryRun == true){
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Transfer Pump Start Blocked By Dry Run Condition");
      transferPumpActive = false;

    }else{
      digitalWrite(TRANSFER_PUMP_RELAY, LOW);
      Serial.println("Transfer Pump Start Blocked by both Dry Run Condition and Mode Switch");
      transferPumpActive = false;   
    }
  }

